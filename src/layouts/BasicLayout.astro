---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";

import type { Props as GlobalLayoutProps } from "./GlobalLayout.astro";
import GlobalLayout from "./GlobalLayout.astro";

type Props = GlobalLayoutProps;

const { class: className, ...props } = Astro.props;
---

<GlobalLayout
	{...props}
	class:list={[
		"grid grid-rows-[auto_1fr_auto] bg-background-primary bg-(image:--bg-grid) bg-size-[16px_16px] bg-top bg-repeat",
		className,
	]}
>
	<div
		class="pointer-events-none sticky top-0 isolate z-30 flex justify-center px-4 pt-4 pb-4 sm:pb-8"
	>
		<Header class="pointer-events-auto" />
	</div>

	<main class="isolate min-h-full">
		<slot />
	</main>

	<Footer />
</GlobalLayout>
