---
interface Props {
	id: string;
}

const { id } = Astro.props;

const script = `window.dataLayer=window.dataLayer||[];function gtag(){dataLayer.push(arguments)}gtag("js",new Date());gtag("config","${id}")`;
---

<script
	type="text/partytown"
	src={`https://www.googletagmanager.com/gtag/js?id=${id}`}></script>
<script type="text/partytown" set:html={script} />
