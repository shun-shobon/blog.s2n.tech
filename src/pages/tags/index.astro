---
import Tag from "@/components/Tag.astro";
import Title from "@/components/Title.astro";
import BasicLayout from "@/layouts/BasicLayout.astro";
import { getTags } from "@/libs/posts";

const tags = await getTags();
---

<BasicLayout title="タグ一覧">
	<div class="px-4 pb-4 sm:px-8 sm:pb-8">
		<div class="mx-auto grid w-full max-w-4xl gap-4 sm:gap-8">
			<Title>タグ一覧</Title>
			<div
				class="flex flex-wrap gap-2 rounded-2xl border border-border-primary bg-background-primary p-4 shadow-lg sm:px-8 sm:py-6"
			>
				{tags.map((tag) => <Tag tag={tag} />)}
			</div>
		</div>
	</div>
</BasicLayout>
